package com.datalingo.one.controller;

import com.datalingo.one.dto.QueryRequest;
import com.datalingo.one.dto.QueryResponse;
import com.datalingo.one.service.QueryToSqlConverter;

import lombok.RequiredArgsConstructor;

import org.springframework.web.bind.annotation.*;

@RestController
@RequestMapping("/api/query")
@RequiredArgsConstructor
public class QueryController {

    private final QueryToSqlConverter queryToSqlConverter;

    @PostMapping("/convert")
    public QueryResponse convert(@RequestBody QueryRequest request) {
        return queryToSqlConverter.convertToSql(request);
    }
}
