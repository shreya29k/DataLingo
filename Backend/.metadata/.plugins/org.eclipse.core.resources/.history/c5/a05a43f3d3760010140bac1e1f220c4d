
server.port=8080

spring.application.name=APIGateway

# Global CORS configuration
spring.cloud.gateway.globalcors.cors-configurations.[/**].allowedOrigins[0]=http://localhost:5173
spring.cloud.gateway.globalcors.cors-configurations.[/**].allowedOrigins[1]=http://localhost:3000
spring.cloud.gateway.globalcors.cors-configurations.[/**].allowedMethods[0]=GET
spring.cloud.gateway.globalcors.cors-configurations.[/**].allowedMethods[1]=POST
spring.cloud.gateway.globalcors.cors-configurations.[/**].allowedMethods[2]=PUT
spring.cloud.gateway.globalcors.cors-configurations.[/**].allowedMethods[3]=DELETE
spring.cloud.gateway.globalcors.cors-configurations.[/**].allowedMethods[4]=OPTIONS
spring.cloud.gateway.globalcors.cors-configurations.[/**].allowedHeaders=*
spring.cloud.gateway.globalcors.cors-configurations.[/**].allowCredentials=true




# Logging


eureka.client.fetch-registry=true
eureka.client.register-with-eureka=true


eureka.client.service-url.defaultZone=http://localhost:8761/eureka


spring.cloud.gateway.server.webflux.discovery.locator.enabled=true
spring.cloud.gateway.discovery.locator.lowerCaseServiceId=true

logging.level.org.springframework.cloud.gateway=DEBUG
logging.level.reactor.netty.http.client=DEBUG

management.endpoints.web.exposure.include=health,info,routes,gateway
management.endpoint.routes.enabled=true
management.endpoint.gateway.enabled=true


# -------- AI SERVICE --------
spring.cloud.gateway.routes[0].id=query-processing-service
spring.cloud.gateway.routes[0].uri=lb://query-processing-service
spring.cloud.gateway.routes[0].predicates[0]=Path=/api/v1/query/**
#spring.cloud.gateway.routes[0].filters[0]=StripPrefix=1

# -------- DATASOURCE SERVICE --------
spring.cloud.gateway.routes[1].id=data-source-service
spring.cloud.gateway.routes[1].uri=lb://data-source-service
spring.cloud.gateway.routes[1].predicates[0]=Path=/api/data/**
#spring.cloud.gateway.routes[1].filters[0]=StripPrefix=1

# Route 3: Combined Route with Rewrite Filter
spring.cloud.gateway.routes[2].id=combined-route
spring.cloud.gateway.routes[2].uri=lb://data-source-service
spring.cloud.gateway.routes[2].predicates[0]=Path=/api/execute/**
spring.cloud.gateway.routes[2].filters[0]=RewritePath=/api/execute/(?<segment>.*), /api/data/generate-and-execute

# -------- ANALYTICS SERVICE --------
spring.cloud.gateway.routes[4].id=analytics-service
spring.cloud.gateway.routes[4].uri=lb://analytics-service
spring.cloud.gateway.routes[4].predicates[0]=Path=/api/analytics/**
spring.cloud.gateway.routes[4].filters[0]=StripPrefix=2
spring.cloud.gateway.routes[4].filters[1]=JwtAuthenticationFilter
# -------- AUTH SERVICE --------
spring.cloud.gateway.routes[3].id=auth-service
spring.cloud.gateway.routes[3].uri=http://localhost:8082
spring.cloud.gateway.routes[3].predicates[0]=Path=/api/auth/**
spring.cloud.gateway.routes[3].filters[0]=RewritePath=/api/auth/(?<segment>.*), /auth/${segment}
server.forward-headers-strategy=native
spring.cloud.gateway.routes[3].filters[1]=JwtAuthenticationFilter


jwt.secret=mysecretkey1234567890
# ========================
# Disable Spring Security Login Prompt
# ========================
spring.autoconfigure.exclude=org.springframework.boot.autoconfigure.security.servlet.SecurityAutoConfiguration
