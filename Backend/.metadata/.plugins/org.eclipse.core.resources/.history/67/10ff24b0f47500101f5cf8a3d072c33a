import com.fasterxml.jackson.annotation.JsonProperty;

public class QueryRequest {
    @JsonProperty("naturalLanguageQuery")
    private String naturalLanguageQuery;
    
    @JsonProperty("databaseType")
    private String databaseType;
    
    @JsonProperty("context")
    private String context; // Optional database context/schema info
    
    // Constructors
    public QueryRequest() {}
    
    public QueryRequest(String naturalLanguageQuery, String databaseType) {
        this.naturalLanguageQuery = naturalLanguageQuery;
        this.databaseType = databaseType;
    }
    
    // Getters and Setters
    public String getNaturalLanguageQuery() { return naturalLanguageQuery; }
    public void setNaturalLanguageQuery(String naturalLanguageQuery) { 
        this.naturalLanguageQuery = naturalLanguageQuery; 
    }
    